<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeteoXamarinForms.Pages.CityPage"
             NavigationPage.HasBackButton="False"
             NavigationPage.HasNavigationBar="True"
             xmlns:local="clr-namespace:MeteoXamarinForms.PageModels"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             BackgroundColor="{StaticResource MainBackgroundColor}"
             Title="{xct:Translate ManageCities}">
    <ContentPage.Content>
        <StackLayout>
            <RefreshView IsRefreshing="{Binding IsRefreshing}"
                         Command="{Binding ActualizeAllDataCommand}">
                <CollectionView ItemsSource="{Binding CitiesWeather}" 
                                SelectionMode="Single"
                                x:Name="Cities" 
                                SelectionChangedCommand="{Binding ShowWeatherInformationCommand}"
                                SelectionChangedCommandParameter="{Binding SelectedItem, Source={x:Reference Cities}}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <SwipeView Threshold="100">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup Name="CommonStates">
                                        <VisualState Name="Selected">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="Transparent" />
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                                <SwipeView.RightItems>
                                    <SwipeItems SwipeBehaviorOnInvoked="Auto">
                                        <SwipeItemView Command="{Binding Source={RelativeSource AncestorType={x:Type local:CityPageModel}}, Path=DeleteWeatherInformationCommand}"
                                                   BackgroundColor="OrangeRed"
                                                   CommandParameter="{Binding}">
                                            <StackLayout WidthRequest="60"
                                                     VerticalOptions="CenterAndExpand"
                                                     Spacing="0"
                                                     HorizontalOptions="CenterAndExpand">
                                                <Label Text="&#xf0a7a;" Style="{StaticResource MaterialIcons}" 
                                                   FontSize="25" VerticalOptions="CenterAndExpand"
                                                   HorizontalOptions="CenterAndExpand"
                                                   TextColor="{StaticResource MainTextColor}"
                                                   Margin="0"/>
                                                <Label Text="Delete"
                                                   TextColor="{StaticResource MainTextColor}"
                                                   HorizontalOptions="CenterAndExpand"
                                                   FontSize="16"/>
                                            </StackLayout>
                                        </SwipeItemView>
                                    </SwipeItems>
                                </SwipeView.RightItems>
                                <Frame Padding="10" CornerRadius="20" BackgroundColor="{StaticResource MainFrameColor}"
                                       Margin="0,5">
                                    <!--<Frame.GestureRecognizers>
                                        <DragGestureRecognizer CanDrag="True"
                                                               DragStarting="DragGestureRecognizer_DragStarting"
                                                               DragStartingCommand="{Binding BindingContext.ItemDragged, Source={x:Reference Cities}}"
                                                               DragStartingCommandParameter="{Binding}"/>
                                        <DropGestureRecognizer AllowDrop="True"
                                                               Drop="DropGestureRecognizer_Drop_Collection"
                                                               DragLeaveCommand="{Binding BindingContext.ItemDragLeave, Source={x:Reference Cities}}"
                                                               DragLeaveCommandParameter="{Binding}"
                                                               DragOverCommand="{Binding BindingContext.ItemDraggedOver, Source={x:Reference Cities}}"
                                                               DragOverCommandParameter="{Binding}"
                                                               DropCommand="{Binding BindingContext.ItemDropped, Source={x:Reference Cities}}"
                                                               DropCommandParameter="{Binding}"/>
                                    </Frame.GestureRecognizers>-->
                                    <StackLayout Orientation="Horizontal" 
                                                        Padding="10">
                                        <StackLayout Spacing="0">
                                            <Label Text="{Binding City}"
                                                       FontSize="22"
                                                       VerticalTextAlignment="Center"
                                                       TextColor="{StaticResource MainTextColor}"/>
                                            <Label Text="{Binding Country}"
                                                       TextColor="{StaticResource SecondaryTextColor}" FontSize="10"/>
                                            <Label Text="{Binding Date, StringFormat='{0:ddd, d MMMM HH:mm}'}"
                                                       TextColor="{StaticResource SecondaryTextColor}" FontSize="10"/>
                                        </StackLayout>
                                        <StackLayout HorizontalOptions="EndAndExpand" Padding="0"
                                                         Margin="0" Spacing="-10">
                                            <StackLayout Orientation="Horizontal" Padding="0"
                                                         Margin="0" Spacing="0" HorizontalOptions="EndAndExpand">
                                                <Image Source="{Binding Icon}" HeightRequest="50"
                                                           WidthRequest="50" VerticalOptions="CenterAndExpand"/>
                                                <Label Text="{Binding Path=Temperature,StringFormat='{0}°'}"
                                                            FontSize="30" HorizontalTextAlignment="End"
                                                            TextColor="{StaticResource MainTextColor}"/>
                                            </StackLayout>
                                            <Label Text="{Binding Description}" HorizontalOptions="EndAndExpand"
                                                       TextColor="{StaticResource SecondaryTextColor}"
                                                       FontSize="12" Margin="10,0"/>
                                        </StackLayout>
                                    </StackLayout>
                                </Frame>
                            </SwipeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
            <Frame HorizontalOptions="Center" CornerRadius="50" Padding="0"
                   BackgroundColor="{StaticResource MainFrameColor}"
                   Margin="10">
                <StackLayout Margin="0" Spacing="0" Padding="0" Orientation="Horizontal">
                    <Button ContentLayout="Top, -10" TextTransform="None" Padding="0"
                            Margin="0,5,-5,0"
                            Opacity="0.85" TextColor="{StaticResource MainTextColor}"
                            BackgroundColor="Transparent"
                            Text="{xct:Translate AddCity}" FontSize="10"                      
                            Command="{Binding AddWeatherInformationCommand}">
                            <Button.ImageSource>
                                <FontImageSource Color="{StaticResource MainTextColor}" Glyph="&#xf0415;" FontFamily="MaterialDesign" Size="25"/>
                            </Button.ImageSource>
                    </Button>
                    <BoxView HeightRequest="10" BackgroundColor="{StaticResource MainBackgroundColor}"
                             WidthRequest="1"/>
                    <Button ContentLayout="Top, -10" TextTransform="None" Padding="0"
                            Margin="0,5,10,0"
                            Opacity="0.85" TextColor="{StaticResource MainTextColor}"
                            BackgroundColor="Transparent"
                            Text="Weather widget" FontSize="10">
                            <Button.ImageSource>
                                <FontImageSource Color="{StaticResource MainTextColor}" Glyph="&#xf1355;" FontFamily="MaterialDesign" Size="25"/>
                            </Button.ImageSource>
                    </Button>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>